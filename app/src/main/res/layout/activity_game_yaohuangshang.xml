<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameYaohuangshang">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_capture_back"
            android:id="@+id/game_btn_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:id="@+id/game_tv_show"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_shzh2"
            android:layout_width="360dp"
            android:layout_height="435dp"
            android:visibility="invisible"
            android:layout_alignTop="@+id/iv_shzh1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shaizhong1"
            android:layout_alignBottom="@+id/ll_center"/>
        <ImageView
            android:id="@+id/ll_center"
            android:layout_width="360dp"
            android:layout_height="280dp"
            android:visibility="visible"
            android:background="@drawable/dizuo"
            android:gravity="center_horizontal|top"
            android:layout_marginBottom="97dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/ll_center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dice_1"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="106dp"
                    android:src="@drawable/dice_1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/dice_1"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/dice_1"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dice_1"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shzh1"
            android:layout_width="280dp"
            android:layout_height="420dp"
            android:background="@drawable/shaizhong"
            android:visibility="visible"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="摇一摇"
            android:textSize="20sp"
            android:background="#cbd5e0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:id="@+id/game_btn_shake"
            android:visibility="visible"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="打开"
            android:textSize="20sp"
            android:background="#cbd5e0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:id="@+id/game_btn_open"
            android:visibility="gone"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="重摇"
            android:textSize="20sp"
            android:background="#cbd5e0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:id="@+id/game_btn_restart"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>